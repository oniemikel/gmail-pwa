{
  "name": "Gmail PWA Launcher",
  "short_name": "Gmail PWA",
  "description": "A lightweight PWA launcher that opens Gmail and handles mailto: as default email app.",
  "dir": "ltr",
  "lang": "ja-JP",
  "start_url": "index.html?source=pwa",
  "scope": "./",
  "display": "standalone",
  "background_color": "#ffffff",
  "theme_color": "#ffffff",
  "categories": ["email", "productivity"],
  "icons": [
    {
      "src": "public/icons/icon-192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "public/icons/icon-512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "public/icons/maskable-192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "maskable"
    },
    {
      "src": "public/icons/maskable-512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "maskable"
    },
    {
      "src": "public/icons/monochrome.svg",
      "sizes": "any",
      "type": "image/svg+xml",
      "purpose": "monochrome"
    }
  ],
  "protocol_handlers": [
    {
      "protocol": "mailto",
      "url": "public/handler/mailto.html?url=%s"
    }
  ],
  "shortcuts": [
    {
      "name": "Compose",
      "short_name": "Compose",
      "url": "public/handler/compose.html",
      "description": "Start a new Gmail message quickly."
    }
  ]
}
