{
  "id": "/gmail-pwa/",
  "name": "Gmail PWA Launcher",
  "short_name": "Gmail PWA",
  "description": "A lightweight PWA launcher that opens Gmail and handles mailto: as default email app.",
  "dir": "ltr",
  "lang": "ja-JP",
  "start_url": "/gmail-pwa/index.html?source=pwa",
  "scope": "/gmail-pwa/",
  "display": "minimal-ui",
  "display_override": ["window-controls-overlay", "browser"],
  "background_color": "#ffffff",
  "theme_color": "#ffffff",
  "orientation": "any",
  "categories": ["email", "productivity"],
  "icons": [
    {
      "src": "./icons/icon-192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "./icons/icon-512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "./icons/maskable-192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "maskable"
    },
    {
      "src": "./icons/maskable-512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "maskable"
    },
    {
      "src": "./icons/monochrome.svg",
      "sizes": "any",
      "type": "image/svg+xml",
      "purpose": "monochrome"
    }
  ],
  "screenshots": [
    {
      "src": "./icons/icon-512.png",
      "sizes": "512x512",
      "type": "image/png",
      "label": "Launcher main screen"
    }
  ],
  "launch_handler": {
    "client_mode": "navigate-existing"
  },
  "protocol_handlers": [
    {
      "protocol": "mailto",
      "url": "/gmail-pwa/handler/mailto.html?url=%s"
    }
  ],
  "shortcuts": [
    {
      "name": "Compose",
      "short_name": "Compose",
      "url": "./handler/compose.html",
      "description": "Start a new Gmail message quickly."
    }
  ],
  "related_applications": [
    {
      "platform": "windows",
      "url": "https://www.microsoft.com/store/productId/9wzdncrfhvqm",
      "id": "9wzdncrfhvqm"
    }
  ],
  "prefer_related_applications": true,
  "handle_links": "preferred",
  "share_target": {
    "action": "/gmail-pwa/index.html",
    "method": "GET",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url"
    }
  },
  "edge_side_panel": true,
  "iarc_rating_id": "PWA-0001"
}
